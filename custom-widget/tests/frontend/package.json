{
  "name": "vilnius-widget-frontend-tests",
  "version": "1.0.0",
  "description": "Frontend tests for Vilnius Widget",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "collectCoverageFrom": [
      "../../js/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}